# 1. Navigate to project folder
cd ~/Downloads/diabetes-prediction

# 2. Create virtual environment
python3 -m venv venv

# 3. Activate environment
source venv/bin/activate  # Mac/Linux
# OR
venv\Scripts\activate     # Windows

# 4. Upgrade pip
pip install --upgrade pip

# 5. Install all packages at once
pip install pandas numpy matplotlib seaborn scikit-learn xgboost tensorflow shap jupyter ipykernel

# 6. Verify installation
python -c "import pandas, numpy, sklearn, xgboost, tensorflow, shap; print('âœ… All packages installed!')"

# 7. Launch Jupyter
jupyter notebook
